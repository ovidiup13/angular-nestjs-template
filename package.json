{
  "name": "project",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "client:start": "ng serve",
    "client:build": "ng build",
    "client:test": "ng test",
    "client:lint": "ng lint",
    "format": "prettier --write \"**/*.ts\"",
    "server:start": "ts-node -r tsconfig-paths/register src/server/main.ts",
    "server:watch": "nodemon",
    "prestart:prod": "rm -rf dist && tsc -p src/server",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "server:test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^6.0.0",
    "@nestjs/common": "^5.0.0-beta.6",
    "@nestjs/core": "^5.0.0-beta.6",
    "@nestjs/microservices": "^5.0.0-beta.6",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/websockets": "^5.0.0-beta.6",
    "core-js": "^2.5.4",
    "fastify": "^1.4.0",
    "fastify-formbody": "^2.0.0",
    "fastify-static": "^4.2.4",
    "handlebars": "^4.0.11",
    "point-of-view": "^1.1.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typescript": "2.7.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.0",
    "@angular/cli": "~6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/language-service": "^6.0.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "codelyzer": "~4.2.1",
    "jest": "^21.2.1",
    "jest-preset-angular": "^5.2.2",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "protractor": "~5.3.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "~5.0.1",
    "tsconfig-paths": "^3.1.1",
    "tslint": "~5.9.1",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
